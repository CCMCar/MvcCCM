
@{
    ViewBag.Title = "Index";
}

@using System.Data
@model DataTable

   
    <div>
        <div class="sui-steps-round cont-steps cont-steps4">
            <div class="finished">
                <div class="wrap">
                    <div class="round round1"></div>
                    <div class="bar"></div>
                </div>
                <label>贷款方案</label>
            </div>
            <div class="todo">
                <div class="wrap">
                    <div class="round round2"></div>
                    <div class="bar"></div>
                </div>
                <label>个人信息</label>
            </div>
            <div class="todo">
                <div class="wrap">
                    <div class="round round3"></div>
                    <div class="bar"></div>
                </div>
                <label>额度评估/审批</label>
            </div>
            <div class="todo last">
                <div class="wrap">
                    <div class="round round4"></div>
                </div>
                <label>创建成功</label>
            </div>
        </div>
        <hr />
        <div>
            <table class="table-bordered table">
                @foreach (DataRow item in (ViewBag.shu as DataTable).Rows)
                {
                    <tr>
                        <td rowspan="3">@item["CarImg"]</td>
                        <td>@item["CarName"]</td>
                        <td>贷款方案</td>
                        <td>参考首付(50%)</td>
                        <td>参考月供</td>
                    </tr>
                    <tr>
                        <td>@item["BrandName"]</td>
                        <td>5年低利率</td>
                        <td rowspan="2">￥ 4.94万</td>
                        <td rowspan="2">￥ 954.81*60期</td>
                    </tr>
                    <tr>
                        <td>参考报价 @item["CarPrice"]</td>
                        <td>购买地：@item["CityName"]</td>
                        
                    </tr>
                }

            </table>
            <hr />
        </div>
        <div>
            <p>选择购车经销商</p>
            <table class="table-bordered table">
                <tr>
                    <td>4S店名称</td>
                    <td>综合评分</td>
                    <td>参考报价</td>
                </tr>
                @foreach (DataRow item in (ViewBag.gong as DataTable).Rows)
                {
                    <tr>
                        <td>
                            @item["ShopName"]<p>@item["ShopAddress"]</p>
                            
                        </td>
                        <td>
                            评分4.5 <p>1280人预约</p>
                            
                        </td>
                        <td>
                            参考报价： @item["CarPrice"]
                        </td>
                    </tr>
                    
                }
            </table>

        </div>
        <input id="Button1" type="button" value="提交"  onclick="location.href='/Clickapplication/Chaxi'" class="btn-danger btn"/>

    </div>